include ./mixins.jade

doctype html
html(ng-app="admin")
head
	title= 'Viajes Transparentes'
	link(rel='stylesheet', href='/css/bootstrap.min.css')
	link(rel='stylesheet', href='/css/flat-ui.min.css')
	link(rel='stylesheet', href='/css/style.css')
body.ar-adm(ng-controller="AdminController")
	#user_panel.ar-panel(ng-class="{aractive:currentPanel=='user_panel'}")
		.ar-advice(class="{{ui_adv_2}}") {{ui_adv_text}}

		#navigation
			.navbar.navbar-default(role="navigation")
				.container-fluid
					.navbar-header
						button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#danavigation")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand Viajes Transparentes
					#danavigation.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li
								a
									span.fui-gear
							li
								a(ng-click="signout()") Salir

					

		#travel_subpanel
			form.login-form.form.ar-form(ng-submit="createTravel()")
				h3 Reportar viaje

				.form-group
					label.ar-label Servidor público
					select(name='travel_servidor' ng-model='travel_servidor')
						option(value='{{serv._id}}'  ng-repeat="serv in userData.permissions.auth_servidores") {{serv.nombre}}
					//- +select('travel_servidor','Técnico','Técnico', 'Alto Nivel')

				.form-group
					label.ar-label Origen
					select(name='travel_origen' ng-model='travel_origen')
						option(ng-repeat="doc in cities" value='{{doc._id}}' ) {{doc.ciudad}}, {{doc.pais}}

				.form-group
					label.ar-label Destino
					select(name='travel_destino' ng-model='travel_destino')
						option(ng-repeat="doc in cities" value='{{doc._id}}' ) {{doc.ciudad}}, {{doc.pais}}


				.form-group
					input.form-control(type="text" value="" ng-model="travel_motivo" placeholder="Motivo" required autofocus)
					label.login-field-icon.fui-checkbox-unchecked
				.form-group
					label.ar-label Mecanismo de origen
					+select('travel_mec_origen','Invitación','Invitación', 'Requerimiento de UR')
				.form-group
					label.ar-label Tipo de representación
					+select('travel_tipo_rep','Técnico','Técnico', 'Alto Nivel')
				.form-group
					label.ar-label Tipo de Viaje
					+select('travel_tipo_viaje','Nacional', 'Nacional', 'Internacional')
				.form-group
					input.form-control(type="text" value="" ng-model="travel_ur" placeholder="Unidad Responsable" required autofocus title="Unidad responsable en la que se genera la nota de viaje, el oficio relacionado a la comisión a la que se envía al funcionario público, u otra información específica sobre motivo del viaje y resultados")
					label.login-field-icon.fui-checkbox-unchecked
				.form-group
					input.form-control(type="text" value="" ng-model="travel_institucion_generadora" placeholder="Unidad Generadora" required autofocus title="Institución que invita, o en su defecto Unidad Responsable que genera la comisión para el servidor público")
					label.login-field-icon.fui-checkbox-unchecked
				.form-group
					input.form-control(type="text" value="" ng-model="travel_oficio" placeholder="Oficio" required autofocus)
					label.login-field-icon.fui-document
				.form-group
					input.form-control(type="text" value="" ng-model="url_comunicado" placeholder="URL del comunicado" required autofocus title="URL que vincula a una nota, blog o comunicado oficial ya sea generada por la institución convocante o por el IFAI para reportar los resultados de la actividad realizada durante la comisión")
					label.login-field-icon.fui-link
				.form-group
					input.form-control(type="text" value="" ng-model="travel_consecutivo" placeholder="Consecutivo" required autofocus title="Número de identificación único asignado por las áreas de control del IFAI para identificar la comisión")
					label.login-field-icon.fui-tag
				.form-group
					input.form-control(type="text" value="" ng-model="travel_acuerdo" placeholder="Acuerdo" required autofocus)
					label.login-field-icon.fui-checkbox-unchecked
				.form-group
					textarea.form-control(value="" ng-model="travel_antecedente" placeholder="Antecedente" required autofocus title="Describe los antecedentes relacionados con la comisión a la que fue enviado el funcionario y del evento al que asistió")
					label.login-field-icon.fui-checkbox-unchecked
				.form-group
					textarea.form-control(value="" ng-model="travel_contribucion_ifai" placeholder="Contribución IFAI" title="Breve descripción de las contribuciones que la comisión y la participación del funcionario generan para el IFAI" required autofocus)
					label.login-field-icon.fui-checkbox-unchecked
				.form-group
					textarea.form-control(value="" ng-model="travel_observaciones" placeholder="Observaciones" required autofocus)
					label.login-field-icon.fui-checkbox-unchecked
				
				.ar-form-section
					label Transporte
				.form-group
					label.ar-label Institución que costea el transporte
					select(name='travel_institucion_pasaje' ng-model='travel_institucion_pasaje')
						option(ng-repeat="doc in userData.permissions.auth_instituciones" value='{{doc._id}}' ) {{doc.nombre}}
				.form-group
					label.ar-label Tipo de transporte
					+select('travel_pasaje.tipo', 'Aéreo', 'Aéreo', 'Terrestre', 'Marítimo')
				.form-group
					input.form-control(type="text" value="" ng-model="travel_pasaje.vuelo_origen" placeholder="Vuelo origen" required autofocus title="Número del vuelo de origen")
					label.login-field-icon.fui-checkbox-unchecked		
				.form-group
					input.form-control(type="text" value="" ng-model="travel_pasaje.linea_origen" placeholder="Línea origen" required autofocus title="Nombre de la Aerolínea o línea del vuelo de origen")
					label.login-field-icon.fui-checkbox-unchecked		
				.form-group
					input.form-control(type="text" value="" ng-model="travel_pasaje.vuelo_regreso" placeholder="Vuelo regreso" required autofocus title="Número del vuelo de regreso")
					label.login-field-icon.fui-checkbox-unchecked		
				.form-group
					input.form-control(type="text" value="" ng-model="travel_pasaje.linea_regreso" placeholder="Línea regreso" required autofocus title="Nombre de la Aerolínea o línea del vuelo de regreso")
					label.login-field-icon.fui-checkbox-unchecked		

				.ar-form-section
					label Comisión
				.form-group
					label.ar-label Inicio de Comisión
					+datepicker('travel_comision.inicio','travel_comision_inicio_opened','open_dp_cmi($event)')
				.form-group
					label.ar-label Fin de Comisión
					+datepicker('travel_comision.fin','travel_comision_fin_opened','open_dp_cmf($event)')
				.form-group
					label.ar-label Tipo de Comisión
					+select('travel_comision.tipo','Prticipación en evento público', 'Prticipación en evento público', 'capacitación', 'Impartir capacitación', 'Notificación', 'Verificación')

				.ar-form-section
					label Gastos
				.form-group
					label.ar-label Moneda
					+select('travel_gastos.moneda','MXN', 'MXN', 'USD')
				.form-group
					input.form-control(type="number" value="" ng-model="travel_gastos.viaticos" placeholder="Gasto por concepto de viáticos" required autofocus title="Monto del gasto generado por viáticos, relacionado rubros diferentes al transporte del funcionario (alimentación principalmente)")
					label.login-field-icon.fui-checkbox-unchecked
				.form-group
					input.form-control(type="number" value="" ng-model="travel_gastos.comprobado" placeholder="Monto comprobado de gastos" required autofocus title="Costo total generado durante el viaje del que se cuenta con comprobantes oficialmente aceptados por el IFAI, según lo reportado por el funcionario en el oficio correspondiente")
					label.login-field-icon.fui-checkbox-unchecked 
				.form-group
					input.form-control(type="number" value="" ng-model="travel_gastos.sin_comprobar" placeholder="Monto sin comprobación" required autofocus title="Costo total generado durante el viaje del que NO se cuenta con comprobantes oficialmente aceptados por el IFAI, según lo reportado por el funcionario en el oficio correspondiente")
					label.login-field-icon.fui-checkbox-unchecked 
				.form-group
					input.form-control(type="number" value="" ng-model="travel_gastos.hospedaje" placeholder="Costo total del hospedaje" required autofocus title="Costo total del hospedaje reportado en el oficio correspondiente")
					label.login-field-icon.fui-checkbox-unchecked 
				.form-group
					input.form-control(type="number" value="" ng-model="travel_gastos.tarifa_diaria" placeholder="Tarifa diaria" required autofocus title="Tarifa de viáticos diaria asignada al funcionario de acuerdo con su perfil y el lugar a donde viaja")
					label.login-field-icon.fui-checkbox-unchecked 
				.form-group
					input.form-control(type="number" value="" ng-model="travel_gastos.pasaje" placeholder="Gasto por concepto de pasajes" required autofocus title="Monto del gasto generado por viáticos, relacionado específicamente con el transporte del funcionario.")
					label.login-field-icon.fui-checkbox-unchecked 
				.form-group
					input.form-control(type="number" value="" ng-model="travel_gastos.viatico_devuelto" placeholder="Monto de viáticos devueltos" required autofocus title="Monto devuelto por el funcionario a la cuenta del IFAI correspondiente, según lineamientos internos, reportado en el oficio correspondiente")
					label.login-field-icon.fui-checkbox-unchecked 



				.ar-form-section
					label Evento
				.form-group
					label.ar-label Inicio de Evento
					+datepicker('travel_evento.inicio','travel_evento_inicio_opened','open_dp_evi($event)')
				.form-group
					label.ar-label Fin de Evento
					+datepicker('travel_evento.fin','travel_evento_fin_opened','open_dp_evf($event)')
				.form-group
					input.form-control(type="text" value="" ng-model="travel_evento.nombre" placeholder="Nombre del evento" required autofocus title="Nombre del evento en que participó")
					label.login-field-icon.fui-checkbox-unchecked		
				.form-group
					input.form-control(type="text" value="" ng-model="travel_evento.tema" placeholder="Tema que se trató en el evento" required autofocus)
					label.login-field-icon.fui-checkbox-unchecked		
				.form-group
					input.form-control(type="text" value="" ng-model="travel_evento.url" placeholder="URL del evento" required autofocus)
					label.login-field-icon.fui-checkbox-unchecked		
				.form-group
					textarea.form-control(value="" ng-model="travel_evento.actividades" placeholder="Actividades" required autofocus title="Actividades realizadas en el evento")
					label.login-field-icon.fui-checkbox-unchecked


				.ar-form-section
					label Hotel
				.form-group
					input.form-control(type="text" value="" ng-model="travel_hotel.nombre" placeholder="Nombre del hotel" required autofocus)
					label.login-field-icon.fui-checkbox-unchecked		
				.form-group
					label.ar-label Inicio del Hospedaje
					+datepicker('travel_hotel.inicio','travel_hotel_inicio_opened','open_dp_hoi($event)')
				.form-group
					label.ar-label Fin del Hospedaje
					+datepicker('travel_hotel.fin','travel_hotel_fin_opened','open_dp_hof($event)')
				.form-group
					label.ar-label Institución que costea el hospedaje
					select(name='travel_institucion_hospedaje' ng-model='travel_institucion_hospedaje')
						option(ng-repeat="doc in userData.permissions.auth_instituciones" value='{{doc._id}}' ) {{doc.nombre}}
				
				input.btn.btn-primary.btn-large.btn-block(type="submit" href="#" value="Guardar Datos")
		.ar-sponsors
			.col-sm-3.ar-sponsor
				a.ar-ifai(href="http://www.ifai.org.mx" target="_blank") 
			.col-sm-3.ar-sponsor
				a.ar-codeando(href="http://codeandomexico.org/" target="_blank") 
			.col-sm-3.ar-sponsor
				a.ar-socialtic(href="http://socialtic.org/" target="_blank") 
			.col-sm-3.ar-sponsor
				a.ar-imco(href="http://imco.org.mx/" target="_blank") 

	#login_panel.ar-panel(ng-class="{aractive:currentPanel=='login_panel'}")
		.ar-advice(class="{{ui_adv}}") Datos incorrectos
		.login-block
			h4 Iniciar Sesión
			form.login-form(name="login_form" ng-submit="login()" method="POST")
				.form-group
					input.form-control.login-field(type="text" value="" ng-model="email" name="email" placeholder= "Correo Electrónico" required autofocus)
					label.login-field-icon.fui-user(for="login-name")
				.form-group
					input.form-control.login-field(type="password" value="" ng-model="password" placeholder="Contraseña" name="password")
					label.login-field-icon.fui-lock(for="login-pass")
				input.btn.btn-primary.btn-large.btn-block(type="submit" href="#" value="Iniciar")
				a.login-link(href="#") Recuperar contraseña
		
	#loading_panel.ar-panel(ng-class="{aractive:currentPanel=='loading_panel'}")
		p
			h6 Viajes Transparentes
		div.loader.loading
