	script(src='/js/jquery.min.js')
	script(src='/js/flat-ui.min.js')
	script(src='/js/angular.min.js')
	script(src='/js/ui-bootstrap.min.js')
	script(src='/js/sha256.js')
	script(src='/js/admin.js')